                        android:defaultValue="@integer/config_desktop_label_color_bg"
                        android:dependency="desktopLabelColorOverride"
                        android:key="desktopLabelColorBg"
                        android:summary="@string/pref_summary_desktop_label_color_bg"
                        android:title="@string/pref_title_desktop_label_color_bg" />
                </PreferenceCategory>
                <PreferenceCategory android:title="@string/pref_title_desktop_icon_label_padding_category" >
                    <CheckBoxPreference
                        android:defaultValue="@bool/config_desktop_label_padding_override"
                        android:dependency="uiHideLabels"
                        android:key="desktopLabelPaddingOverride"
                        android:summary="@string/pref_summary_desktop_label_padding_override"
                        android:title="@string/pref_title_desktop_label_padding_override" />

                    <com.okmm.android.launcher.ui.DialogSeekBarPreference
