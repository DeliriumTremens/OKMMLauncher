                    android:key="autosizeIcons"
                    android:summary="@string/pref_summary_autosize_icons"
                    android:title="@string/pref_title_autosize_icons" />

                <PreferenceCategory android:title="@string/pref_title_desktop_icon_label_category" >
                    <CheckBoxPreference
                        android:defaultValue="@bool/config_ui_hide_labels"
                        android:disableDependentsState="true"
