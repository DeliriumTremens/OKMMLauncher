                        android:summary="@string/pref_summary_desktop_label_padding_radius_size"
                        android:title="@string/pref_title_desktop_label_padding_radius_size" />
                    <com.okmm.android.launcher.ui.DialogSeekBarPreference
                        android:defaultValue="@integer/config_desktop_label_padding_h"
                        android:dependency="desktopLabelPaddingOverride"
                        android:dialogMessage="@string/pref_dialog_desktop_label_padding_horizontal"
                        android:key="desktopLabelPaddingH"
                        android:max="10"
                        android:summary="@string/pref_summary_desktop_label_padding_horizontal"
                        android:title="@string/pref_title_desktop_label_padding_horizontal" />
                    <com.okmm.android.launcher.ui.DialogSeekBarPreference
                        android:defaultValue="@integer/config_desktop_label_padding_v"
                        android:dependency="desktopLabelPaddingOverride"
                        android:dialogMessage="@string/pref_dialog_desktop_label_padding_vertical"
                        android:key="desktopLabelPaddingV"
                        android:max="10"
                        android:summary="@string/pref_summary_desktop_label_padding_vertical"
                        android:title="@string/pref_title_desktop_label_padding_vertical" />
                </PreferenceCategory>
