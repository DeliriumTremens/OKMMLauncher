                        android:dependency="uiDesktopIndicator"
                        android:key="uiDesktopIndicatorColorAllow"
                        android:summary="@string/pref_summary_desktop_indicator_color_allow"
                        android:title="@string/pref_title_desktop_indicator_color_allow" />

